{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":enablePreCommit",
    "group:allNonMajor"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "before 6am on Monday"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "KevinTCoughlin"
  ],
  "reviewers": [
    "KevinTCoughlin"
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 0,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Group Kotlin updates",
      "matchPackagePatterns": [
        "^org.jetbrains.kotlin"
      ],
      "groupName": "Kotlin",
      "labels": [
        "dependencies",
        "kotlin"
      ]
    },
    {
      "description": "Group AndroidX updates",
      "matchPackagePatterns": [
        "^androidx\\."
      ],
      "groupName": "AndroidX",
      "labels": [
        "dependencies",
        "androidx"
      ]
    },
    {
      "description": "Group Firebase updates",
      "matchPackagePatterns": [
        "^com.google.firebase"
      ],
      "groupName": "Firebase",
      "labels": [
        "dependencies",
        "firebase"
      ]
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "labels": [
        "dependencies",
        "github-actions"
      ]
    },
    {
      "description": "Auto-merge minor and patch updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "priority: high"
      ],
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "priority: critical"
    ],
    "assignees": [
      "KevinTCoughlin"
    ]
  }
}

